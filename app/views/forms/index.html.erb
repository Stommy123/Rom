<h1>Forms</h1>
<table class="table">
  <thead>
    <tr>
      <th>Form Id</th>
      <th>Surgeon</th>
      <th>Date</th>
      <th>Region</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td><%= form.id %></id>
        <td><%= form.surgeon_contacts.first.name %></td>
        <td><%= form.date&.to_formatted_s(:long) %></td>
        <td><%= form.region %></td>

        <td><%= link_to 'Show', form %></td>
        <td><%#= link_to 'Destroy', form, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Form', new_form_path %>
<%= link_to('Logout', destroy_user_session_path, method: :delete) %>
